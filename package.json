{
  "name": "pipoca",
  "version": "1.0.0",
  "description": "AI-powered subtitle translation using local Ollama models",
  "type": "module",
  "scripts": {
    "build": "node scripts/esbuild.js src/app.ts builddir/app.js",
    "dev": "node scripts/esbuild.js src/app.ts builddir/app.js --watch",
    "lint": "eslint src/**/*.ts",
    "format": "prettier --write src/**/*.ts",
    "type-check": "tsc --noEmit"
  },
  "keywords": [
    "subtitle",
    "translation",
    "ai",
    "ollama",
    "srt",
    "language",
    "local",
    "privacy",
    "gnome",
    "gtk"
  ],
  "author": "Thiago Duarte <tduarte@github.com>",
  "license": "BlueOak-1.0.0",
  "repository": {
    "type": "git",
    "url": "https://github.com/tduarte/Pipoca.git"
  },
  "bugs": {
    "url": "https://github.com/tduarte/Pipoca/issues"
  },
  "homepage": "https://github.com/tduarte/Pipoca",
  "devDependencies": {
    "@girs/adw-1": "^1.8.0-4.0.0-beta.23",
    "@girs/gio-2.0": "^2.84.0-4.0.0-beta.23",
    "@girs/glib-2.0": "^2.84.0-4.0.0-beta.23",
    "@girs/gobject-2.0": "^2.84.0-4.0.0-beta.23",
    "@girs/gtk-4.0": "^4.18.3-4.0.0-beta.23",
    "@nyx_lyb3ra/eslint-config-gnome": "^3.0.0",
    "@nyx_lyb3ra/tsconfig-gnome": "^3.0.1",
    "@types/node": "^22.15.29",
    "eslint": "^9.28.0",
    "prettier": "^3.5.3",
    "typescript": "^5.8.3",
    "typescript-eslint": "^8.33.0"
  },
  "dependencies": {
    "esbuild": "^0.25.5"
  }
}
